<BaseMDNavigationItem>

    MDNavigationItemIcon:
        icon: root.icon

    MDNavigationItemLabel:
        text: root.text

MDBoxLayout:

    size_hint_y: 1
    orientation: 'vertical'

    MDScreenManager:

        id: screen_manager

        MDScreen:

            name: 'events'

            MDScrollView:

                MDBoxLayout:

                    id: layout
                    orientation: 'vertical'
                    size_hint_y: None
                    adaptive_height: True
                    padding: dp(10)
                    spacing: dp(10)

                    MDCard:

                        orientation: 'vertical'
                        adaptive_height: True
                        radius: dp(40)
                        padding: dp(20)
                        style: 'outlined'

                        MDLabel:

                            text: 'Лофф.События'
                            halign: 'center'
                            size_hint_y: None
                            height: dp(40)

                    MDCard:

                        id: card_today
                        orientation: 'vertical'
                        adaptive_height: True
                        radius: dp(40)
                        padding: dp(20)
                        style: 'outlined'

                        MDLabel:

                            text: 'Сегодня:'
                            halign: 'center'
                            size_hint_y: None
                            height: dp(40)

                    MDCard:

                        id: card_tomorrow
                        orientation: 'vertical'
                        adaptive_height: True
                        radius: dp(40)
                        padding: dp(20)
                        style: 'outlined'

                        MDLabel:

                            text: 'Завтра:'
                            halign: 'center'
                            size_hint_y: None
                            height: dp(40)

                    MDCard:

                        id: card_yesterday
                        orientation: 'vertical'
                        adaptive_height: True
                        radius: dp(40)
                        padding: dp(20)
                        style: 'outlined'

                        MDLabel:

                            text: 'Вчера:'
                            halign: 'center'
                            size_hint_y: None
                            height: dp(40)

                    MDCard:

                        id: card_week_later
                        orientation: 'vertical'
                        adaptive_height: True
                        radius: dp(40)
                        padding: dp(20)
                        style: 'outlined'

                        MDLabel:

                            text: 'Через неделю:'
                            halign: 'center'
                            size_hint_y: None
                            height: dp(40)


        MDScreen:

            name: 'settings'

        MDScreen:

            name: 'help'

            MDScrollView:

                MDBoxLayout:

                    id: layout
                    orientation: 'vertical'
                    size_hint_y: None
                    adaptive_height: True
                    padding: dp(10)
                    spacing: dp(10)

                    MDCard:

                        orientation: 'vertical'
                        adaptive_height: True
                        radius: dp(40)
                        padding: dp(20)
                        style: 'outlined'


                        MDLabel:

                            text: 'Список создается Вами самостоятельно по шаблону, указанному ниже.\n\nСписок должен представлять текстовый файл с названием "Sobytiya.txt", который хранится в папке "Лофф.События", расположенной в корневом каталоге телефона.\n\nСписок можно создавать/корректировать как на телефоне, так и на персональном компьютере (с последующим переносом на телефон). Программа считывает список из телефона.\n\nФормат списка:\n\n* Строки, начинающиеся со знака «*»,\n* являются служебными\n07.01.1963 АБИШЕВ Тимур Кенесович\n07.01.1775 ДУХОВАНИЧ Василий Иванович\n08.01.1975 КАЛАБУХОВ Дмитрий Николаевич\n08.01 День рыбака\n08.01.1985 День создания автобазы\n15.01.1955 СУНИКИН Александр Игоревич\n* Февраль\n23.02 День защитника отечества\n26.03.1963 УСТИНОВ Владимир Алексеевич\n\nОписание: дата (двухзначное число), точка, месяц (двухзначное число), точка, год (четырехзначное число, при наличии), пробел, имя (или название праздника), откат на новую строку. Каждая дата и имя размещаются только на одной отдельной строке.\n\nВозможно два типа дат: дни рождения и дни праздников.\n\nФормат дня рождения:\n07.01.1963 АБИШЕВ Тимур Кенесович\nФормат праздника:\n08.01 День рыбака\n\nПри создании/корректировке списка Вы должны следить за строгим соблюдением его формата. Файлы, не соответствующие указанному формату, не считываются программой.'
                            adaptive_height: True



    MDNavigationBar:
        on_switch_tabs: app.on_switch_tabs(*args)
        BaseMDNavigationItem:
            id: home_button
            icon: 'home'
            text: 'События'
            active: True
        BaseMDNavigationItem:
            id: settings_button
            icon: 'cog'
            text: 'Настройки'
        BaseMDNavigationItem:
            id: help_button
            icon: 'help'
            text: 'Помощь'