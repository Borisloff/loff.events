<BaseMDNavigationItem>

    MDNavigationItemIcon:
        icon: root.icon

    MDNavigationItemLabel:
        text: root.text

MDBoxLayout:

    size_hint_y: 1
    orientation: 'vertical'

    MDScreenManager:

        id: screen_manager

        MDScreen:

            name: 'events'

            MDScrollView:

                MDBoxLayout:

                    id: layout
                    orientation: 'vertical'
                    size_hint_y: None
                    adaptive_height: True
                    padding: dp(10)
                    spacing: dp(10)

                    MDCard:

                        orientation: 'vertical'
                        adaptive_height: True
                        radius: dp(40)
                        padding: dp(20)
                        style: 'outlined'

                        MDLabel:

                            text: 'Лофф.События'
                            halign: 'center'
                            size_hint_y: None
                            height: dp(40)

                    MDCard:

                        id: card_today
                        orientation: 'vertical'
                        adaptive_height: True
                        radius: dp(40)
                        padding: dp(20)
                        style: 'outlined'

                        MDLabel:

                            text: 'Сегодня:'
                            halign: 'center'
                            size_hint_y: None
                            height: dp(40)

                    MDCard:

                        id: card_tomorrow
                        orientation: 'vertical'
                        adaptive_height: True
                        radius: dp(40)
                        padding: dp(20)
                        style: 'outlined'

                        MDLabel:

                            text: 'Завтра:'
                            halign: 'center'
                            size_hint_y: None
                            height: dp(40)

                    MDCard:

                        id: card_yesterday
                        orientation: 'vertical'
                        adaptive_height: True
                        radius: dp(40)
                        padding: dp(20)
                        style: 'outlined'

                        MDLabel:

                            text: 'Вчера:'
                            halign: 'center'
                            size_hint_y: None
                            height: dp(40)

                    MDCard:

                        id: card_week_later
                        orientation: 'vertical'
                        adaptive_height: True
                        radius: dp(40)
                        padding: dp(20)
                        style: 'outlined'

                        MDLabel:

                            text: 'Через неделю:'
                            halign: 'center'
                            size_hint_y: None
                            height: dp(40)


        MDScreen:

            name: 'settings'

        MDScreen:

            name: 'help'


    MDNavigationBar:
        on_switch_tabs: app.on_switch_tabs(*args)
        BaseMDNavigationItem:
            id: home_button
            icon: 'home'
            text: 'События'
            active: True
        BaseMDNavigationItem:
            id: settings_button
            icon: 'cog'
            text: 'Настройки'
        BaseMDNavigationItem:
            id: help_button
            icon: 'help'
            text: 'Помощь'